<!DOCTYPE html>
<html lang="en">
  <%-include("partials/header.ejs") %>
  <body>
    <%- include("partials/navbar.ejs") %>
    <section id="header">
      <div>
        <h1>Some blogging</h1>
      </div>
    </section>

    <section id="blog">
      <div id="new-entry">
        <h2>Create a new entry</h2>
        <form id="form" action="/submit" method="post">
          <label for="title">Title: </label>
          <input
            type="text"
            id="title"
            name="title"
            required
            autocapitalize="on"
          />
          <label for="text">Text: </label>
          <textarea id="text-content" name="text" required></textarea>

          <button type="submit" id="submit-btn">Submit</button>
        </form>
      </div>
    </section>

    <section id="footer"><%- include("partials/footer.ejs") %></section>
  </body>
</html>
